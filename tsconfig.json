{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "moduleResolution": "node",
    "strict": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
