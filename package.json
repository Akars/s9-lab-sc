{
  "name": "node-ts-template",
  "version": "1.0.0",
  "description": "Basic template of a node + typescript project",
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -fr dist && tsc",
    "start": "npm run build && node ./dist/index.js",
    "lint": "eslint --fix src",
    "test": "npm run build && NODE_ENV=test mocha --recursive dist/specs --exit --async-stack-traces",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "compile-schemas": "json2ts -i src/schemas/json -o src/schemas/types"
  },
  "author": "Thomas VEILLARD",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@types/bcrypt": "^5.0.0",
    "@types/chai": "^4.3.4",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.5",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "json-schema-to-ts": "^2.6.2",
    "json-schema-to-typescript": "^11.0.2",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@fastify/cookie": "^8.3.0",
    "@types/pg": "^8.6.5",
    "bcrypt": "^5.1.0",
    "class-validator": "^0.14.0",
    "common-js": "^0.3.8",
    "dotenv": "^16.0.3",
    "fastify": "^4.11.0",
    "pg": "^8.8.0",
    "reflect-metadata": "^0.1.13",
    "typedi": "^0.10.0",
    "typeorm": "^0.3.10"
  }
}
